<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_inherited_cl_form_view" model="ir.ui.view">
        <field name="name">product.template.product.form.inherit.cl</field>
        <field name="model">product.template</field>
        <field name="mode">primary</field>
        <field name="priority" eval="6"/>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page name="subscription" string="Subscription" attrs="{'invisible': [('type','not in', ['subsc'])]}">
                    <group>
                        <group col="4">
                            <field name="cl_delay" attrs="{'required': [('type','=', 'subsc')]}"/>
                            <field name="cl_delay_unit" attrs="{'required': [('type','=', 'subsc')]}" nolabel="1"/>
                        </group>
                        <newline/>
                        <group string="Cancellation" col="4">
                            <field name="cl_tacit_agreement"/>
                            <newline/>
                            <field name="cl_cancellation"/>
                            <field name="cl_cancellation_unit" nolabel="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>