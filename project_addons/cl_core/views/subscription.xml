<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="cl_subscription_tree_view" model="ir.ui.view">
            <field name="name">cl.subscription.tree_view</field>
            <field name="model">cl.subscription</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="partner_id"/>
                    <field name="date_begin"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>
        
        <record id="cl_subscription_form_view" model="ir.ui.view">
            <field name="name">cl.subscription.form_view</field>
            <field name="model">cl.subscription</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <group colspan="4" col="4">
                            <h2 colspan="4"><field name="name" default_focus="1" nolabel="1" required="1"/></h2>
                            <field name="quantity" required="1"/>
                            <field name="price" required="1"/>
                            <field name="product_id" required="1"/>
                            <field name="partner_id" required="1"/>
                            <field name="delay" required="1"/>
                            <field name="delay_unit" nolabel="1" required="1"/>
                            <newline/>
                            <field name="date_begin" required="1"/>
                            <field name="date_end" readonly="1"/>
                        </group>
                        <group string="Cancellation" col="4">
                            <field name="tacit_agreement"/>
                            <newline/>
                            <field name="cancellation"/>
                            <field name="cancellation_unit" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>